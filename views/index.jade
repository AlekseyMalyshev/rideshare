doctype html
html(lang='en' ng-app='Riders')
  head
    title Share a Ride
    link(href='/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/css/styles.css', rel='stylesheet')
    script(src='/angular/angular.min.js', type='text/javascript')
    script(src='/angular-ui-router/release/angular-ui-router.min.js', type='text/javascript')
  body

    nav.navbar.navbar-default(ng-controller='NavbarCtrl')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ui-sref='profile')
            i.fa.fa-user

        #navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(ui-sref='thumb')
                i.fa.fa-thumbs-o-up
            li
              a(ui-sref='riders')
                i.fa.fa-users
          ul.nav.navbar-nav.ng-hide.navbar-right(ng-show='isLogged()')
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false' ng-hide="isAuthenticated()")
                i.fa.fa-user
                span.caret
              ul.dropdown-menu#user-menu
                li
                  a(ui-sref='login' ng-click="logout()") Logout

    ui-view

    include ./modal

    script(src='/jquery/dist/jquery.min.js' type='text/javascript')
    script(src='/bootstrap/dist/js/bootstrap.min.js' type='text/javascript')
    script(src='/satellizer/satellizer.min.js', type='text/javascript')
    script(src='/firebase/firebase.js', type='text/javascript')

    script(src='/js/app.js' type='text/javascript')
    script(src='/js/riders.js' type='text/javascript')
    script(src='/js/rider.js' type='text/javascript')
    script(src='/js/login.js' type='text/javascript')
    script(src='/js/navbar.js' type='text/javascript')
    script(src='/js/profile.js' type='text/javascript')
    script(src='/js/register.js' type='text/javascript')
    script(src='/js/thumb.js' type='text/javascript')

    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBaPF6pxv1pcx7h6NmcMAUr2-jEfyfjF2o', type='text/javascript')

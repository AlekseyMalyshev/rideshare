.container
  form.form-inline.destination(role='form', ng-submit='go($event)')
    .form-group
      label Where? 
      input.form-control(type='text' placeholder='enter destination' ng-model='rider.dest' required) 
    .form-group
      label When? 
      select.form-control(ng-model='rider.time') 
        option(value='5') within 5 minuts
        option(value='15') within 15 minuts
        option(value='30') within 30 minuts
        option(value='60') within 1 hour
    .form-group
      input#havecar(type='checkbox' ng-model='rider.car') 
      label(for='havecar')&nbsp;I am driving
    .form-group
      label How many seats? 
      select.form-control(ng-disabled='!rider.car' ng-model='rider.places') 
        option 1
        option 2
        option 3
        option 4
        option 5
        option 6
        option 7
        option 8
        option 9
        option 10
    .form-group
      input.form-control.btn.btn-primary(type='submit' value='Add')
